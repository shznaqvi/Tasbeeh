<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#efefef"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addone"
        android:id="@+id/addButton"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff1e1e1e"
        android:textSize="110sp"
        android:paddingTop="72dp"
        android:paddingBottom="72dp"
        android:layout_margin="8dp"
        android:elevation="1dp"
        android:radius="2dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtCount"
        android:id="@+id/txtCount"
        android:background="#fffefefe"
        android:textColor="#ff00ff00"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="false"
        android:textSize="110sp"
        android:freezesText="true"
        android:inputType="number" />
    <Button
        android:id="@+id/setMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resetButton"
        android:layout_alignParentStart="true"
        android:padding="16dp"
        android:text="Sound ON"

        android:textColor="#d6d6efd6"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:id="@+id/resetButton"
        android:background="#d6ff0000"
        android:gravity="center"
        android:nestedScrollingEnabled="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/countLimit" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:id="@+id/countLimit"
        android:background="#ffffffff"
        android:editable="true"
        android:padding="5dp"
        android:textSize="24sp"
        android:layout_above="@+id/lblLimit"
        android:layout_alignParentEnd="true"
        android:text="0"
        android:inputType="number"
        android:numeric="integer"
        android:maxLines="1"
        android:digits="0123456789"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtCountLimit"
        android:id="@+id/lblLimit"
        android:labelFor="@+id/countLimit"
        android:padding="5dp"
        android:textColor="#33333333"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/countLimit" />

</RelativeLayout>