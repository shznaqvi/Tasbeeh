<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ff000000"
    android:screenOrientation="portrait"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtCount"
        android:background="#ff1e1e1e"
        android:textColor="#ff00ff00"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="false"
        android:textSize="110sp"
        android:freezesText="true"/>

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addone"

        android:textColor="#ff1e1e1e"
        android:textSize="110sp"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:background="#d6ff0000"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="24sp"
        android:layout_below="@+id/txtCount"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/countLimit"
        android:layout_width="110dp"
        android:layout_height="wrap_content"

        android:background="#ffffffff"
        android:editable="true"
        android:padding="5dp"
        android:textSize="24sp"
        android:text="0"
        android:inputType="number"
        android:layout_below="@+id/lblLimit"
        android:layout_alignParentEnd="true"
        android:hint="number" />

    <TextView
        android:id="@+id/lblLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtCountLimit"
        android:labelFor="@+id/countLimit"
        android:padding="5dp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/txtCount"
        android:layout_alignParentEnd="true" />

</RelativeLayout>